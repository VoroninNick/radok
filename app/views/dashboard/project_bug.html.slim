.page.bug
  = render 'page_banner', background_image_url: 'banners/dashboard.png',
           title: 'My dashboard',
           description: 'See your projects here',
           button_label: 'New test',
           button_url: wizard_path
  = render "breadcrumbs"
  .row
    .columns.large-12.bug-header-row
      .h2.bug-id
        |Bug ##{@bug[:id]}
      .h2.bug-title
        = @bug[:title]

      p
        a href=dashboard_project_bug_list_path(@project)
          |< Return to bug list
  .row
    .columns.large-12
      .slider-panel.opened
        .slider-panel-header
          = embedded_svg_from_assets("bug.svg")
          span
            |Bug details
        .slider-panel-content
          .properties-table.banner-details-table
            table
              tbody
                tr
                  td
                    |Found in version
                  td
                    = @bug[:version]
                tr
                  td
                    | Project's component
                  td
                    = @bug[:component]
                tr
                  td
                    |Type
                  td
                    = @bug[:type]
                tr
                  td
                    |Created at
                  td
                    = @bug[:created_at]


          .properties-table.banner-details-table
            table
              tbody
                tr
                  td
                    |Reporter
                  td
                    |Bughunter 12345
                tr
                  td
                    | Severity
                  td
                    = render "severity_value", bug: @bug, severity_symbols: @severity_symbols

                tr
                  td
                    |Reproducibility
                  td
                    |Always
                tr
                  td
                  td


    .columns.large-12
      .slider-panel.bug-info-panel.opened
        .slider-panel-header
          = embedded_svg_from_assets("bug-info.svg")
          span
            |Bug information
        .slider-panel-content
          .columns.large-12
